<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".HealthMateApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_final"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_final"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.HealthMate">

        <!-- LAUNCHER: Only SplashActivity has the launcher intent -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HealthMate.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Screens -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".ForgetPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/Theme.HealthMate" />

        <!-- User Dashboard -->
        <activity
            android:name=".UserDashBoardActivity"
            android:exported="false"
            android:label="@string/title_activity_user_dash_board"
            android:theme="@style/Theme.HealthMate" />

        <!-- Admin Dashboard -->
        <activity
            android:name=".AdminDashBoardActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_dash_board"
            android:theme="@style/Theme.HealthMate" />

        <!-- Chatbot -->
        <activity
            android:name=".ChatbotActivity"
            android:exported="false"
            android:label="@string/title_activity_chatbot"
            android:theme="@style/Theme.HealthMate" />

        <!-- Notifications -->
        <activity
            android:name=".NotificationsActivity"
            android:exported="false"
            android:label="Notifications"
            android:theme="@style/Theme.HealthMate" />

        <!-- Appointments -->
        <activity
            android:name=".appointments.DoctorListActivity"
            android:exported="false"
            android:label="Select Doctor"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".appointments.SlotSelectionActivity"
            android:exported="false"
            android:label="Select Slot"
            android:theme="@style/Theme.HealthMate" />

        <!-- Medical Records -->
        <activity
            android:name=".records.MedicalRecordsActivity"
            android:exported="false"
            android:label="Medical Records"
            android:theme="@style/Theme.HealthMate" />

        <!-- Medication Reminders -->
        <activity
            android:name=".reminders.MedicationRemindersActivity"
            android:exported="false"
            android:label="Medication Reminders"
            android:theme="@style/Theme.HealthMate" />

        <!-- Emergency SOS -->
        <activity
            android:name=".emergency.EmergencySOSActivity"
            android:exported="false"
            android:label="Emergency SOS"
            android:theme="@style/Theme.HealthMate" />

        <!-- Mental Wellness -->
        <activity
            android:name=".wellness.MentalWellnessActivity"
            android:exported="false"
            android:label="Mental Wellness"
            android:theme="@style/Theme.HealthMate" />

        <!-- Admin Activities -->
        <activity
            android:name=".admin.AdminUsersActivity"
            android:exported="false"
            android:label="Users"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.UserMedicalRecordsActivity"
            android:exported="false"
            android:label="Medical Records"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.AdminDoctorsActivity"
            android:exported="false"
            android:label="Doctors"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.AdminAppointmentsActivity"
            android:exported="false"
            android:label="Appointments"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.AdminEmergencyActivity"
            android:exported="false"
            android:label="Emergency Contacts"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.DoctorDetailActivity"
            android:exported="false"
            android:label="Doctor Details"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.AddDoctorActivity"
            android:exported="false"
            android:label="Add Doctor"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".admin.AdminWellnessActivity"
            android:exported="false"
            android:label="Wellness Resources"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:theme="@style/Theme.HealthMate" />

        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:label="Change Password"
            android:theme="@style/Theme.HealthMate" />

        <receiver
            android:name=".reminders.ReminderReceiver"
            android:exported="false" />

        <!-- Hospital Locator -->
        <activity
            android:name=".hospitals.HospitalLocatorActivity"
            android:exported="false"
            android:label="Hospital Locator"
            android:theme="@style/Theme.HealthMate" />

    </application>

</manifest>
